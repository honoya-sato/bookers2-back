
<div class="container">
  <div class="row">
    <div class="col-sm-3">
      <%= render 'shared/sidebar', user: @user %>
    </div>
  </div>
  <div class="col-sm-9">
    <h2>Books</h2>
    <table class="table table-sm">
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        <tbody></table>
      </div>
    </div>
  </div>
</div>
