
<div class="container">
    <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
  <div class="row">
    <div class="col-sm-3">
      <%= render 'shared/sidebar', user: current_user %>
    </div>
  </div>
  <div class="col-sm-9">
    <h2>Books</h2>
    <table class="table table-sm">
      <thead>
        <th>user</th>
        <th>title</th>
        <th>opinion</th>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= link_to book.title, "/books/#{book.id}" %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        <tbody>
      </table>
    </div>
  </div>
</div>
