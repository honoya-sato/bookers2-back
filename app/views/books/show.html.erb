
<div class="container">
  <div class="row">
    <div class="col-sm-3">
    
      <%= render 'shared/sidebar', user: @book.user %>
      
    </div>
  </div>
  <div class="col-sm-9">
    <h2>Book detail</h2>
      <table class="table table-sm">
        <tbody>
          <tr>
            <td>
              <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
              <%= link_to @book.user.name, user_path(@book.user) %>
            </td>
            <td><%= link_to @book.title, book_path(@book) %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete,  data: { confirm: 'Are you sure?' }, class: "btn-sm btn-danger" %></td>
            <% end %>
          </tr>
          <tbody>
      </table>
      </div>
    </div>
  </div>
